---
// src/components/Header.astro
---

<header
  class="fixed top-0 left-0 right-0 z-50 pt-4 px-4 transition-all duration-300"
>
  <div
    class="glass-panel w-full max-w-[95%] md:max-w-6xl mx-auto rounded-2xl bg-white/90 backdrop-blur-xl border-2 border-white shadow-[0_8px_30px_-10px_rgba(37,99,235,0.15)] flex justify-between items-center py-3 px-4 md:py-4 md:px-8 relative overflow-hidden"
  >
    <div
      class="absolute inset-0 bg-gradient-to-r from-transparent via-white/60 to-transparent -translate-x-full animate-[shimmer_3s_infinite]"
    >
    </div>

    <a
      href="https://doramed.ir"
      target="_blank"
      class="relative z-10 flex items-center gap-2 bg-blue-50 text-blue-700 px-3 py-1.5 md:px-5 md:py-2.5 rounded-xl border border-blue-100 hover:bg-blue-100 transition-colors group"
    >
      <span
        class="text-[11px] md:text-sm font-bold pt-0.5 whitespace-nowrap"
        style="font-family: inherit;">وب‌سایت شرکت</span
      >
      <div
        class="bg-white p-1 rounded-full shadow-sm group-hover:scale-110 transition-transform"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-3.5 w-3.5 md:h-4 md:w-4"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
          ></path>
        </svg>
      </div>
    </a>

    <div class="relative z-10">
      <img
        src="/sefid.png"
        alt="لوگوی دورامد"
        class="h-7 md:h-10 w-auto object-contain hover:scale-105 transition-transform duration-300"
        style="filter: brightness(0) saturate(100%) invert(13%) sepia(30%) saturate(973%) hue-rotate(183deg) brightness(93%) contrast(95%); opacity: 0.9;"
      />
    </div>
  </div>
</header>
