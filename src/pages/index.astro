          if (this.y > height || this.y < 0) this.velocityY *= -1;
        }

        draw() {
          if (!ctx) return;
          ctx.fillStyle = properties.particleColor;
          ctx.beginPath();
          ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
          ctx.fill();
        }
      }

